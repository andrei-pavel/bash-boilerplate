# Source guard
[[ ! -z "${_LIB_UTILS_SOURCED+x}" ]] && return 0
export _LIB_UTILS_SOURCED=true

# Header
. "$(dirname "${BASH_SOURCE[0]}")/header"

function additional() {
  local additional_arguments=
  case $- in
    *x* ) additional_arguments+=" -d";;
    * )   ;;
  esac
  printf "%s" "${additional_arguments}"
}
export -f additional

function confirm() {
  # call with a prompt string or use a default
  read -r -p "${1:-Are you sure? [y/N]} " response
  case "$response" in
    [yY][eE][sS]|[yY])
      true
      ;;
    *)
      false
      ;;
  esac
}
export -f confirm

function mandatory() {
  while (( ${#} > 0 )); do
    if [[ -z "${!1+x}" ]]; then
      printf "${RED}%s${RESET} argument is mandatory.\\n" "${1}" >&2
      print-usage
      exit 2
    fi
    shift
  done
}
export -f mandatory
