SUCCESS="DONE"
FAIL="FAIL"

_spinner_cycle='⠋⠙⠸⠴⠦⠇'
_spinner_period=0.15s

function _spinner {
  case ${1} in
    start)
      tput civis
      i=1
      while true; do
          printf '\b%s' "${_spinner_cycle:i++%${#_spinner_cycle}:1}"
          sleep ${_spinner_period}
        done
      ;;

    stop)
      tput cvvis
      if [[ -z ${3} ]]; then
          exit 1
      fi
      kill "${3}" > /dev/null 2>&1
      if [[ ${2} == 0 ]]; then
        status="$(printf "${GREEN}%s${RESET}" "${SUCCESS}")"
      else
        status="$(printf "${RED}%s${RESET}" "${FAIL}")"
      fi
      printf '\b[%s]\n' "${status}"
      ;;

    *)
      printf 'ERROR: invalid argument, try {start/stop}' &>2
      exit 2
      ;;
  esac
}
