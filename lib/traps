[[ ! -z ${_LIB_TRAPS_INCLUDED+x} ]] && return 0
_LIB_TRAPS_INCLUDED=true

# Traps
# Accounts for spinner as well
function traps() {
  local on_trap=
  if (( ${#} > 0 )); then
    on_trap=${1}
  fi
  for t in HUP INT QUIT KILL TERM EXIT; do
    trap "\
      return_code=\${?}
      trap - EXIT
      declare -f stop_spinner &> /dev/null && stop_spinner \${return_code}
      ${on_trap}
      printf \"${t} %s\\n\" \"\${return_code}\" 1>&2
      exit \${return_code}
    " ${t}
  done
}

# Default traps
traps
