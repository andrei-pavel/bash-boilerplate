# Source guard
test -n "${_LIB_TRAPS_SOURCED+x}" && return 0
export _LIB_TRAPS_SOURCED=true

# Traps
# Accounts for spinner as well
function traps() {
  _THE_TRAP=${1-}
  local force=${2-}
  for t in HUP INT QUIT KILL TERM EXIT; do
    if test "${force}" = '--force'; then
      trap "
        ${_THE_TRAP}
      " "${t}"
    elif test "${force}" = '--return-code-only'; then
      trap "
        return_code=\${?}
        trap - EXIT
        ${_THE_TRAP}
        printf \"${t} %s\\n\" \"\${return_code}\" 1>&2
        exit \${return_code}
      " "${t}"
    else
      trap "
        return_code=\${?}
        trap - EXIT
        declare -f stop-spinner &> /dev/null && stop-spinner \${return_code}
        ${_THE_TRAP}
        printf \"${t} %s\\n\" \"\${return_code}\" 1>&2
        exit \${return_code}
      " "${t}"
    fi
  done
}
export -f traps
export _THE_TRAP

# Default traps
traps
